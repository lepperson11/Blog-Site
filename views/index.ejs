<div class="author">
  <h1 class="author__heading">Hello, I'm Luke.</h1>
  <p class="author__body">Web Developer and Student</p>
</div>

<img
  src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/Red_Apple.jpg/1200px-Red_Apple.jpg"
  alt="apple"
/>

<section class="articles">
  <h2 class="article__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%- post.title %></span>
        <span class="article-list__date">
          <% post.createdAt.toDateString() %>
        </span>
      </a>
    </li>
    <% }); %>
  </ul>
  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>

  <!-- if prevPage is 1 then go to / -->
  <% if (prevPage >= 1) { %> <% if (prevPage === 1) { %>
  <a href="/" class="pagination-newer">View Newer Posts &gt;</a>
  <% } else { %>
  <a href="/?page=<%= prevPage %>" class="pagination-newer"
    >View Newer Posts &gt;</a
  >
  <% } %> <% } %>
</section>
